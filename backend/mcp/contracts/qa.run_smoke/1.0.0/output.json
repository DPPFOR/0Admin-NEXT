{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:0admin:mcp:qa.run_smoke:1.0.0:output",
  "title": "qa.run_smoke output 1.0.0",
  "type": "object",
  "additionalProperties": false,
  "$defs": {
    "uuid": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
    },
    "base64": {
      "type": "string",
      "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
    },
    "rfc3339": {
      "type": "string",
      "format": "date-time",
      "pattern": ".*(Z|[+-]\\d{2}:\\d{2})$"
    },
    "iso_duration": {
      "type": "string",
      "pattern": "^(P(?=.+)(?:\\d+W|\\d+D(?:T(?:\\d+H)?(?:\\d+M)?(?:\\d+S)?)?|T(?:\\d+H)?(?:\\d+M)?(?:\\d+S)?))$"
    }
  },
  "properties": {
    "summary": {
      "type": "object",
      "properties": {
        "total": {"type": "integer", "minimum": 0},
        "passed": {"type": "integer", "minimum": 0},
        "failed": {"type": "integer", "minimum": 0}
      },
      "required": ["total", "passed", "failed"],
      "additionalProperties": false
    },
    "suites": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "cases": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "status": {"type": "string"}
              },
              "required": ["name", "status"],
              "additionalProperties": true
            }
          }
        },
        "required": ["name", "cases"],
        "additionalProperties": false
      }
    }
  },
  "required": ["summary", "suites"]
}
